@import 'variables.styl'

// General

*
	box-sizing border-box
	text-decoration none
	
body 
	font-family body-font
	margin 0
	background-image: url('../img/retro_blue.png');
	
p, li
	line-height 1.5

// Header
header
	display flex
	flex-direction column
	div
		display flex
		margin 0 auto
		a
			display flex
			flex-direction column
			font-family logo-font
			color fttl-red
			font-weight 700
			margin 0.5em 1em
			.fly
				font-size 6.8em
				// font-size 8.5em
				margin 0
				line-height 1
			.tothe
				font-size 3.1em
				// font-size 3.9em
				margin 0
				line-height 1
			.limit
				font-size 4em
				// font-size 5em
				margin 0 
				line-height 1
		div
			display flex
			flex-direction column
			img
				margin 0.5em 1em
				max-width 100px
				max-height 100px
	.byline
		// display none
		margin 0 auto 1em auto
		font-size 1.4em
		font-family logo-font
		color fttl-white

//Nav

.animate-show
	opacity 1
.animate-show.ng-hide-add, .animate-show.ng-hide-remove
	transition all linear 0.5s
.animate-show.ng-hide
	opacity 0


// Views
.main-title
	font-family heading-font
	color fttl-red
	font-size 2.1em
	-ms-transform rotate(-4deg) 
	-webkit-transform rotate(-4deg) 
	transform rotate(-4deg)
	text-shadow: 0px 0px fttl-white, 0px 0px fttl-white, 1px 0px fttl-white, 0px 1px fttl-white, 2px 1px fttl-white, 1px 2px fttl-white
.page-content
	max-width 270px
	margin 0 auto
	color fttl-red
	//Hangar
	.link
		padding-top 0.6em
		text-align center
		display block
		position relative
		max-width 270px
		margin 0 auto 0.5em auto
		height 45px
		background fttl-red
		color fttl-white
		font-weight 700
	//Crew	
	.shadow
		box-shadow: 0px 0px fttl-white, 0px 0px fttl-white, 1px 0px fttl-white, 0px 1px fttl-white, 2px 1px fttl-white, 1px 2px fttl-white
		.slide-title
			background-color fttl-white
			color fttl-red
			padding 1em
			margin 0
			// font-family heading-font
			font-weight 700
	//Safety
	.safety-link
		img
			margin-bottom 1em	

		

	


// SM Icons
.social-media
	display flex
	justify-content space-between
	max-width 270px
	margin 1em auto
	color fttl-red
	font-size 2.5em

// Footer
footer
	color fttl-red
	font-weight 500
	max-width 270px
	margin 0 auto 1em auto
	a
		color inherit
	i
		margin-right 16px
	address
		display flex
		margin-bottom 0.5em
		.fa-map-marker
			font-size 2.7em
			margin-left 0.07em
			padding-top 0.1em
		.map-links
			display flex
			flex-direction column
	div
		display flex
		margin-bottom 0.5em
		.fa-phone
			font-size 2.7em
		.fa-envelope
			font-size 2em
		p
			margin 0
			padding-top 0.5em
		a
			padding-top 0.2em
			
