@import 'variables.styl'

// General
*
	box-sizing border-box
	text-decoration none
body 
	font-family body-font
	margin 0
	background fttl-texture	
p, li
	line-height 1.5
// Header
header
	display flex
	flex-direction column
	background darken(fttl-blue, 10%)
	div
		display flex
		margin 0 auto
		a
			display flex
			flex-direction column
			font-family logo-font
			color fttl-red
			font-weight 700
			margin 0.5em 1em
			.fly
				font-size 6.8em
				margin 0
				line-height 1
			.tothe
				font-size 3.1em
				margin 0
				line-height 1
			.limit
				font-size 4em
				margin 0 
				line-height 1
		div
			display flex
			flex-direction column
			img
				margin 0.5em 1em
				max-width 100px
				max-height 100px
	.byline
		margin 0 auto 1em auto
		font-size 1.4em
		font-family logo-font
		color fttl-white
//Nav
.animate-show.ng-hide-add, .animate-show.ng-hide-remove
	transition all linear 0.5s
nav
	margin 0
	#drop
		display none
	.toggle
		display block
		max-width 100%
		height 61px
		background fttl-red
		color fttl-white
		border-bottom 16px solid darken(fttl-red, 20%)
		span
			display block
			width 270px
			margin 0 auto
			padding-top 12px
			font-weight 700
			font-size 1.4em
	.animate-show
		opacity 1
	.animate-show.ng-hide
		opacity 0
	.menu
		list-style none
		padding 0
		margin 0
		li
			display block
			max-width 100%
			background fttl-red
			height 45px
			padding 8px 0 0 16px
			border-bottom 1px solid darken(fttl-red, 20%)
			.link, label
				display block
				max-width 100%
				color fttl-white
				font-weight 700
				font-size 1.2em
			input
				display none
					
				
// Views
.main-title
	font-family heading-font
	color fttl-red
	font-size 2.1em
	-ms-transform rotate(-4deg) 
	-webkit-transform rotate(-4deg) 
	transform rotate(-4deg)
	text-shadow: 0px 0px darken(fttl-red, 20%), 0px 0px darken(fttl-red, 20%), 1px 0px darken(fttl-red, 20%), 0px 1px darken(fttl-red, 20%)
.page-content	
	margin 0 auto
	color fttl-red
	//Hangar
	section
		max-width 320px
		padding 20px
		background fttl-white
		margin-bottom 0.5em
		box-shadow fttl-card
		p
			color fttl-black
			font-weight 700
			font-size 0.9em
		.link
			padding-top 0.6em
			text-align center
			display block
			position relative
			max-width 270px
			margin 0 auto 0.5em auto
			height 45px
			background fttl-red
			color fttl-white
			font-weight 700
		//Crew	
		.shadow
			box-shadow: 0px 0px fttl-white, 0px 0px fttl-white, 1px 0px fttl-white, 0px 1px fttl-white, 2px 1px fttl-white, 1px 2px fttl-white
			.slide-title
				background-color fttl-white
				color fttl-red
				padding 1em
				margin 0
				font-weight 700
		//Safety
		.safety-link
			img
				margin-bottom 1em	
// SM Icons
.social-media
	display flex
	justify-content space-around
	max-width 100%
	height 61px
	padding-top 8px
	color fttl-white
	background fttl-red
	font-size 2em
	border-top 16px solid darken(fttl-red, 20%)

// Footer
footer
	color fttl-white
	background darken(fttl-red, 10%)
	font-weight 700
	font-size 0.65em
	max-width 100%
	padding 1.5em 0 1.5em 2.5em
			
